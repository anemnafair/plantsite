<h1>My Plants</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @myplants.each do |myplant| %>
      <tr>
        <td><%= myplant.description %></td>
        <td><%= link_to 'Show', myplant %></td>
        <td><%= link_to 'Edit', edit_myplant_path(myplant) %></td>
        <td><%= link_to 'Destroy', myplant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Plant', new_myplant_path %>
