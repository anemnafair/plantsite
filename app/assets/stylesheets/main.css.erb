/*
 * General/Utility Styles
*/

* {
  -moz-box-sizing: border-box; /* Firexfox */
  -webkit-box-sizing: border-box; /* Safari/Chrome/iOS/Android */
  box-sizing: border-box; /* IE */
}

body {
  margin: 0;
  background: rgb(245, 245, 245);
  font-family: 'Open Sans', arial, sans-serif;
  font-size: 0.875rem;
  color: rgb(86, 90, 92);
}

.clearfix:after {
  content: "";
  display: table;
  clear: both;
}

a {
  font-weight: bold;
  color: rgb(255, 89, 95);
  text-decoration: none;
}

strong {
  font-weight: 600;
}



/*
 * Button styles
*/

  .button {
    background: rgb(255, 89, 95);
    color: white;
    text-decoration: none;
    display: block;
    padding: 0.75rem 5rem;
    border-bottom: 1px solid rgb(227, 25, 29);
    border-radius: 2px;
    width: 274px;
    margin: 0 auto;
    float: center;
  }

  /*
   * Heading
  */

  h1 {
    font: 'OpenSans';
    font-weight: 'regular';
    font-size: 1.375rem;
    color: #666A6C;
  }

  /*
   * Header and .hero styles
  */

  header {
    background: #FFF;
  }

  header .logo{
    border-right: 1px solid #DCE0E0;
  }

  .hero img {
    width: 100%;
  }

  /*
   * Info
  */

  .info {
    background: #FFF;
    text-align: center;
    padding: 1.5625rem;
    border-bottom: 1px solid #DCE0E0;
  }

  .info h1 {
    margin-bottom: .3125rem;
  }

  .info .profile {
    margin-bottom: 1.5rem;
  }

  .info .owner-details img {
    border-radius: 50%;
    margin-bottom: .375rem;
  }

  .info h2.relationship, .info h2.name {
    color: #909597;
    margin-bottom: .1875rem;
  }

  .info h2.name {
    font-weight: bold;
  }

  .info p.location {
    margin-bottom: 1.25rem;
  }

  .info .icons {
    float: left;
    width: 33.3%;
  }

  .info .icons img {
    height: 30px;
    margin-bottom: .1875rem;
  }

  .info .booking h2 {
    font-weight: 600;
    font-size: 1.375rem;
    margin-bottom: .8125rem; 
  }

  .info h2.price time {
    font-size: 1rem;
  }


  /*
   * About
  */

  .about {
    text-align: left;
    padding: 1.5625rem;
    border-bottom: 1px solid #DCE0E0;
    width: 100%;
  }

  .about .about-dog {
    font: 'OpenSans';
    text-align: center;
    font-size: 16px;
    font-weight: bold;
    padding-bottom: 40px;
    color: #565A5C;
  }

  .about p.description {
    font: 'OpenSans';
    font-weight: 'regular';
    font-size: 13px;
    line-height: 22px;
    color: #565A5C;
    padding-bottom: 22px;
    width: auto;
  }

  .about .contact {
    font: 'OpenSans';
    font-weight: bold;
    font-size: 13px;
    color: #FF595F;
    width: 100%;
    text-align: center;
  }

  /*
   * Care
  */

  .care {
    text-align: auto;
    padding: 1.5625rem;
    border-bottom: 1px solid #DCE0E0;
    color: #565A5C;
    font-size: 13px;
    font: 'OpenSans';
  }

  .care .cares {
    padding-bottom: 8px;
  }

  .care .todo {
    font-weight: bold;
    line-height: 15px;
  }

  /*
   * Games
  */

  .games {
    text-align: left;
    padding: 1.5625rem;
    border-bottom: 1px solid #DCE0E0;
    color: #565A5C;
    font-size: 13px;
    font: 'OpenSans';
  }

  .games .fun {
    padding-bottom: 10px;
  }

  .games img {
    padding-right: 4px;
  }

  .games .grouped {
    line-height: 20px;
  }

  /*
   * Photos
  */

  .photos {
    border-bottom: 1px solid #DCE0E0;
    margin-bottom: 50px;
    padding: 4px;
  }

  .photos img {
    width: 100%;
    height: auto;
    padding: 10px;
  }






@media only screen and (min-width: 1060px) {  

  .container {
    width: 1040px;
    margin: 0 auto;
  }

  .column {
    float: left;
  }

  .button {
    width: 275px;
    margin: auto;
  }

  .info h1 {
    margin-bottom: .6875rem;
  }

  .info h2 {
    margin-bottom: .1875rem;
  }

  .info .profile {
    width: 660px;
    border-right: 1px solid #DCE0E0;
  }

  .info .booking {
    width: 380px;
    margin-top: 15px;   
  }
  
  .info .owner-details {
    width: 20%;
  }

  .info .pet-details {
    width: 80%;
    text-align: left;
  }

  .info .pet-details .icons {
    width: inherit;
    margin-right: 50px;
  }

  .info .pet-details .icons img {
    display: block;
    margin: .1875rem auto .1875rem;
  }

  /*
   * About
  */

  .about {
    width: 655px;
    display: block;
  }

  .about .about-dog {
    text-align: center;
  }

  .about p.description {
    width: 630px;
  }

  .about .contact {
    text-align: left;
  }

  /*
   * Care
  */

  .care {
    height: 130px;
    width: 655px;
    float: left;
    display: block;
    line-height: 22px;
  }

  .care .cares {
    width: 130px;
    float: left;
    display: inline-block;
    line-height: 22px;
  }

  .care .dog-care {
    width: 240px; 
    float: left; 
    display: inline-block;
    line-height: 22px;   
  }

  .care .schedule {
    width: 225px;
    float: center;
    display: inline-block;
    line-height: 22px;
  }

  /*
   * Games
  */ 

  .games {
    width: 655px;
    float: left;
    display: block;
    line-height: 22px;
    height: 130px;
    margin-bottom: 28px;

  }

  .games .fun {
    width: 130px;
    float: left;
    display: inline-block;
    line-height: 22px;
  }

  .games .all_grouped {
    width: 240px;
    float: left;
    display: inline-block;
    line-height: 22px;
  }

  .games .grouped {
    line-height: 30px;
  }

  .games img {
    margin-right: 3px;
  }

  /*
   * Photos
  */

  .photos {
    display: inline-block;
 
  }

  .photos img {
    width: 225px;
    height: 400px;
    padding-right: 27px;
    padding-bottom: 80px;
    text-align: center;   
  }


}